package com.kh.thenolja.common.template;

import com.kh.thenolja.common.model.vo.PageInfo;

public class Pagination {

	public static PageInfo getPageInfo(int listCount,
									   int currentPage,
									   int boardLimit,
									   int pageLimit) {
		
		int maxPage =(int)Math.ceil((double)listCount / boardLimit);
		int startPage =(currentPage - 1) / pageLimit * pageLimit + 1;
		int endPage = startPage + pageLimit - 1;

		if(endPage > maxPage) endPage = maxPage;
		
		System.out.println(listCount);
		System.out.println(currentPage);
		System.out.println(boardLimit);
		System.out.println(pageLimit);
		System.out.println(maxPage);
		System.out.println(startPage);
		System.out.println(endPage);
		
		return new PageInfo(listCount,currentPage, boardLimit, pageLimit, maxPage, startPage, endPage);
		
		
	}
	
	
	
}
