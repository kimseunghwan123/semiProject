	// loginId null 체크
	// 수정화면 진입 (관리자전용URL)
	$('tbody > tr.list').click(function(){
        const eventNo = $(this).children().eq(0).text();
        location.href= 'selectUpdate.event?eventNo=' + eventNo + '&flag=' + 'Y';
