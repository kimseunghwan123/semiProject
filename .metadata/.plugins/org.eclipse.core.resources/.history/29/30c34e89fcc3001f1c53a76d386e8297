<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="memberMapper">
  
  <resultMap id="memberResultSet" type="member">

	<result column="MEM_NO"     		property="memNo"/>
	<result column="MEM_ID"  			property="memId"/>
	<result column="MEM_PWD" 			property="memPwd"/>
	<result column="NICKNAME"  			property="nickName"/>
	<result column="BORN_DATE"  		property="bornDate"/>
	<result column="EMAIL"  			property="Email"/>
	<result column="DELETE_YN"  		property="deleteYn"/>
	<result column="JOIN_DATE"     		property="joinDate"/>
	
</resultMap>
  <!-- 로그인  기능  쿼리문 -->
	<select id="login" parameterType="member" resultType="member">
		
		SELECT
		       MEM_NO,
		       MEM_NAME,
		       MEM_PHONE,
		       MEM_ID,
		       MEM_PWD,
		       NICKNAME,
		       EMAIL,
		       BORN_DATE,
		       JOIN_DATE,
		       MEM_STATUS,
		       DELETE_YN
	      FROM
	           TB_MEMBER
	      JOIN
	      	   TB_NONMEM USING(MEM_NO)
	     WHERE
	           MEM_ID = #{memId}
	       AND
	           MEM_PWD = #{memPwd}
	       AND
	           DELETE_YN = 'Y' <!-- 회원 Y, 비회원 N -->
	
	</select>
  
  <!--아이디 체크  기능 쿼리문-->
   <select id="idCheck" parameterType="member" resultType="member">
  SELECT
		       COUNT(*)
		  FROM
		       TB_MEMBER
		 WHERE
		       MEM_ID = #{memId}
 </select> 
 
  <!--회원가입 기능 쿼리문  -->
  	<select id="insertMember" parameterType="member" resultType="member">
  
  	
  
	  INSERT
			   ALL
			  INTO
			       TB_NONMEM
			VALUES
			       (
			       SEQ_MNO.NEXTVAL,
			       #{memName}, <!-- 이름 -->
			       #{memPhone}, <!-- 번호 -->
			       DEFAULT <!-- 회원 / 비회원 -->
			       )
			  INTO
			       TB_MEMBER
			VALUES
			       (
			       SEQ_MNO.CURRVAL,
			       #{memId}, <!-- 아이디 -->
			       #{memPwd}, <!-- 비밀번호 -->
			       #{nickName}, <!-- 닉네임 -->
			       #{bornDate}, <!-- 생년월일 -->
			       #{Email}, <!-- 이메일 -->
			       DEFAULT, <!-- 탈퇴여부 -->
			       SYSDATE <!-- 가입일 -->
			       )
			SELECT
			       *
			  FROM
			       DUAL
		</select>	       
  
  
  
  
  <!-- 비회원 수정 업데이트 기능 쿼리문 -->
	  <select id="updateNoMember" parameterType="member" resultType="member">
	  
		  UPDATE
				       TB_NONMEM
				   SET
				       MEM_NAME = #{memName},
				       MEM_PHONE = #{memPhone}
				 WHERE
				       MEM_NO = #{memNo}
		  
		 
	  </select>
  
  <!-- 회원 수정 업데이트 기능 쿼리문 --> 
	 <select id="updateMember" parameterType="member" resultType="member">
	 
		 UPDATE
				       TB_MEMBER
				   SET
				       EMAIL = #{Email},
				       MEM_PWD = #{memPwd}
				 WHERE
				       MEM_NO = #{memNo}
	 
	 </select>
 
  
  <!-- 회원 탈퇴 기능 쿼리문 -->
	  <select id="deleteMember" parameterType="member" resultType="member">
	  
	  UPDATE
			       TB_MEMBER
			   SET
			       DELETE_YN = 'N'
			 WHERE
			       MEM_NO = #{memNo}
			   AND
			       DELETE_YN = 'Y'
	  
	  
	  </select>
	  
  
  
  
  
  </mapper>